<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="$([MSBuild]::GetPathOfFileAbove(dir.props))" />

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <UseAppHost>false</UseAppHost>
    <OutputPath>$(BinDir)</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.HostModel" Version="5.0.0-alpha1.19453.5" />
  </ItemGroup>

  <ItemGroup Condition="'$(RestoreOnly)' == 'true'">
    <PackageReference Include="Microsoft.Private.CoreFx.NETCoreApp" Version="$(MicrosoftPrivateCoreFxNETCoreAppVersion)" />
  </ItemGroup>

  <Target Name="DumpCoreFxPackageVersion" Condition="'$(RestoreOnly)' == 'true'" BeforeTargets="Restore">
    <Error Condition="'$(CoreFxPackageVersionOutputFile)'==''" Text="CoreFxPackageVersionOutputFile must be passed as a property." />

    <Delete Files="$(CoreFxPackageVersionOutputFile)" Condition="Exists('$(CoreFxPackageVersionOutputFile)')" />
    <WriteLinesToFile File="$(CoreFxPackageVersionOutputFile)" Lines="$(MicrosoftPrivateCoreFxNETCoreAppVersion)" Overwrite="true"/>
    <Message Text="MicrosoftPrivateCoreFxNETCoreAppVersion: $(MicrosoftPrivateCoreFxNETCoreAppVersion) written to: $(CoreFxPackageVersionOutputFile)" Importance="High" />
  </Target>
</Project>
